<launch>
	<node name="local_costmap" pkg="costmap_3d" type="costmap_2d_node" output="screen">
	<rosparam file="$(arg path)/nav/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(arg path)/nav/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(arg path)/nav/local_costmap_params.yaml" command="load" />
    <rosparam file="$(arg path)/nav/global_costmap_params.yaml" command="load" />
    </node>
</launch>
